{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OddLauncher",
  "version": "0.4.1",
  "identifier": "com.oddlauncher.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "OddLauncher - Dev Tools Launcher",
        "width": 1400,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis", "deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Steam-like launcher for dev tools",
    "longDescription": "A native desktop application that acts like a Steam Library for development tools, providing a GUI-first way to launch local development servers with real-time terminal output.",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    }
  }
}
